</div>

<img src="/img/japan5.jpg" alt="A japanes road sign" class="hero-image" width="981" height="528" />

<section class="articles">
    <h2 class="articles_heading">Latest Posts</h2>
    
    <ul class="articles-ul">
        <li class="articles-li">
            <% data.forEach(post => { %>
                <a href="/post/<%= post._id %>" class="articles-a">
                <span><%= post.title %></span>
                <span class="articles-list_date"><%= post.createdAt.toDateString() %></span>
                </a>
       <%  }); %>
        </li>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>

        <% } %>

</section>
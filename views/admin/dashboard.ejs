<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-posts" class="button">+Add New</a>
</div>

<ul class="admin-posts">
    <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>"> <%= post.title %>&nearr;</a>
            <div class="admin-post-controls">
                <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>   

                <form action="/delete-post/<%= post.id %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="delete btn">
            </form>
            </div>
        </li>
    <% }) %>
</ul>